# Strategist's Best Friend - Environment Variables
# Copy this file to .env and update with your values

# === REQUIRED: API Keys ===
OPENAI_API_KEY=your_openai_api_key_here
SCRAPFLY_KEY=your_scrapfly_key_here

# === Database (Auto-provided by Render in production) ===
DATABASE_URL=postgresql+asyncpg://localhost/sbf_dev

# === Application Configuration ===
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false

# === Rate Limiting ===
RATE_LIMIT_PER_HOUR=3

# === Cache Configuration ===
CACHE_TTL_HOURS=24
CACHE_DIR=/tmp/sbf_cache

# === GPT-5.1 Configuration ===
GPT5_MODEL=gpt-5
GPT5_TIMEOUT=90
CIRCUIT_BREAKER_THRESHOLD=3
CIRCUIT_BREAKER_COOLDOWN=600

# === Scrapfly Configuration ===
SCRAPFLY_ASP=true
SCRAPFLY_RENDER_JS=true
SCRAPFLY_TIMEOUT=30000

# === ChromaDB Configuration ===
CHROMA_PERSIST=false

# === Processing Limits ===
MAX_CONCURRENT_SCRAPES=10
MAX_PDF_SIZE_MB=10
MAX_CONTEXT_TOKENS=50000

# === Timeouts ===
WORKFLOW_TIMEOUT=900
SCRAPE_TIMEOUT=45
